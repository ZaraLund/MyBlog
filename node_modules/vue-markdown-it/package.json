{
  "name": "vue-markdown-it",
  "description": "A Vue.js wrapper around markdown-it, a powerful markdown renderer",
  "keywords": [
    "markdown",
    "markdown-it",
    "vue",
    "vue-markdown-it"
  ],
  "author": "Thom Hurks",
  "license": "MIT",
  "version": "0.9.4",
  "scripts": {
    "build": "vue-cli-service build --target lib --name vue-markdown-it ./src/components/Markdown.vue",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "highlight.js": "^9.13.1",
    "markdown-it": "^8.4.2",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-deflist": "^2.0.3",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-ins": "^2.0.0",
    "markdown-it-mark": "^2.0.0",
    "markdown-it-smartarrows": "^1.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "vue": "^2.5.21"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-eslint": "^3.2.1",
    "@vue/cli-service": "^3.2.0",
    "vue-template-compiler": "^2.5.21"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "main": "./dist/vue-markdown-it.common.js",
  "files": [
    "dist/*"
  ]
}
